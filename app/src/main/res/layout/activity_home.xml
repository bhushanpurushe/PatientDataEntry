<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_f_home_new_patient_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="0dp"
        android:contentDescription="@string/new_patient_entry"
        android:fontFamily="sans-serif"
        android:padding="20dp"
        android:text="@string/new_patient_entry"
        android:textAllCaps="true"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_f_home_patient_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="0dp"
        android:contentDescription="@string/patient_list"
        android:fontFamily="sans-serif"
        android:padding="20dp"
        android:text="@string/patient_list"
        android:textAllCaps="true"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_f_home_send_patient_pdf_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="0dp"
        android:contentDescription="@string/send_patient_pdf_email"
        android:fontFamily="sans-serif"
        android:padding="20dp"
        android:text="@string/send_patient_pdf_email"
        android:textAllCaps="true"
        android:textSize="20sp" />

    <!--<Button
        android:id="@+id/btn_f_home_system_config"
